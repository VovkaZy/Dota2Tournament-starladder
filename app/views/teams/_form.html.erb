<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.label :logo %>
    <br/>
    <img alt="logo" height="100px" src="<%= @team.logo.url %>" width="100px"/>
    <br/>
    <%= f.file_field :logo %>
    <br/>
  </div>
  <div class="form-actions pull-right">
    <%= f.button :submit %>
  </div>
<% end %>
